<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_main_loan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/loan"
            android:textColor="@color/blackText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_main_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/credit_card"
            android:textColor="@color/blackText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_main_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mine"
            android:textColor="@color/blackText"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_tab"
        android:orientation="vertical">

    </LinearLayout>
</RelativeLayout>
